<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FF81C4D7">

    <TextView
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/dmserifdisplay_regular"
        android:text="Inicia sesión para\naventurarte con\nGo Piura."
        android:textColor="@color/black"
        android:textSize="35sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/trasb"
        android:drawableLeft="@drawable/google"
        android:fontFamily="@font/ptserif_regular"
        android:paddingLeft="15dp"
        android:text="Continuar con Google"
        android:textAllCaps="false" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/trasb"
        android:drawableLeft="@drawable/letter"
        android:fontFamily="@font/ptserif_regular"
        android:paddingLeft="15dp"
        android:text="Continuar con dirección de\n correo electrónico"
        android:textAllCaps="false"

        />


</LinearLayout>
